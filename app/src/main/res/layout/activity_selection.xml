<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kushagravaish.example.SelectionActivity">

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_selection"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_selection"
        android:layout_marginTop="120dp"
        app:layout_constraintRight_toRightOf="@+id/activity_selection"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Select Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_selection"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_selection"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_selection"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.78" />

    <Button
        android:text="Generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_announcements_generate"
        app:layout_constraintLeft_toLeftOf="@+id/activity_selection"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_selection"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_selection"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.65999997" />
</android.support.constraint.ConstraintLayout>
